<% provide(:title, "Edit User") %>
<h1>Update your profile</h1>

<%= form_for @user do |f| %>
	<%= render 'fields', f: f %>
	<span class="update">
		<%= f.submit "Save Changes", class: "btn btn-large btn-primary" %>
	</span>
<% end %>
<br />
<span class="gravatar-link">
	<%= gravatar_for @user %>
	<a href="http://gravatar.com/emails" target="_blank">change</a>
</span>
