<% provide(:title, "Sign In") %>
<h1>Sign In</h1>
<p class="strong">New user? <%= link_to "Sign Up", signup_path %>.</p>

<%= form_for(:session, url: sessions_path) do |f| %>
	<div class="row">
		<div class="col-md-4 form-font form-padding">
			<%= f.label :email, class: "control-label" %>
			<%= f.text_field :email, class: "form-control input-sm", autofocus: true, placeholder: "benjamin.dover@gmail.com" %>

			<%= f.label :password, class: "control-label" %>
			<%= f.password_field :password, class: "form-control input-sm", placeholder: "Hope you remember!" %>

			<%= f.submit "Sign In", class: "btn btn-large btn-primary" %>
		</div>
	</div>
<% end %> 

<script type="text/javascript">
	var trip = new Trip([
	{
		sel : $('#session_email, label[for="session_email"]'),
		content : "Input the one you used to sign up.",
		expose : true,
		position : 'e'
	},
	{
		sel : $('#session_password, label[for="session_password"]'),
		content : "Input the one you used to sign up.",
		expose : true,
		position : 'e'
	}
	], {
		showNavigation : true,
		showCloseBox : true,
		delay : -1,
		animation: 'fadeInUp'
	});
</script>
